<main class="perfil-page">
    <!-- Header con foto de perfil y nombre -->
    <div class="perfil-header">
        <div class="perfil-photo-container">

        @{
            string fotoUsuario = ViewBag.Usuario.foto;
            if(fotoUsuario == null)
            {
                <img src="/Imagenes/FotoPerfil.jpg" alt="Foto de perfil" class="perfil-photo">
            }else
            {
                <img src="@fotoUsuario" alt="Foto de perfil" class="perfil-photo">
            }
        }
        </div>
        <h1 class="perfil-nombre">@ViewBag.Usuario.username</h1>
        <h3 class="perfil-fecha">@ViewBag.Usuario.fechaNacimiento.ToString("dd/MM/yyyy")</h3>
    </div>

    <!-- Información del perfil -->
    <div class="perfil-info">
        <div class="perfil-campo">
            <span class="perfil-label">Objetivos:</span>
            <div class="perfil-value">
                @if(ViewBag.Usuario.objetivo != null && !string.IsNullOrWhiteSpace(ViewBag.Usuario.objetivo))
                {
                    @ViewBag.Usuario.objetivo
                }
            </div>
        </div>

        <div class="perfil-separador"></div>

        <div class="perfil-campo">
            <span class="perfil-label">Descripción:</span>
            <div class="perfil-value">
                @if(ViewBag.Usuario.descripcion != null && !string.IsNullOrWhiteSpace(ViewBag.Usuario.descripcion))
                {
                    @ViewBag.Usuario.descripcion
                }
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="perfil-botones">
        <a href='@Url.Action("Editar_Perfil","Home")' class="perfil-btn perfil-btn-editar">Editar</a>
        <a href='@Url.Action("LogOut","Account")' class="perfil-btn perfil-btn-logout">Log Out</a>
    </div>
</main>