<main class="perfil-page">
    <!-- Header con foto de perfil y nombre -->
    <div class="perfil-header">
        <div class="perfil-photo-container">
            <img src="/Imagenes/FotoPerfil.jpg" alt="Foto de perfil" class="perfil-photo">
        </div>
        <h1 class="perfil-nombre">@ViewBag.Usuario.nombre</h1>
        <h3 class="perfil-fecha">@ViewBag.Usuario.fechaNacimiento</h3>
    </div>

    <!-- Información del perfil -->
    <div class="perfil-info">
        <div class="perfil-campo">
            <span class="perfil-label">Objetivos: @ViewBag.Usuario.Objetivo</span>
            <div class="perfil-value">
                @if(ViewBag.Usuario.Objetivo != null)
                {
                    @ViewBag.Usuario.Objetivo
                }
            </div>
        </div>

        <div class="perfil-separador"></div>

        <div class="perfil-campo">
            <span class="perfil-label">Descripción: @ViewBag.Usuario.Descripción</span>
            <div class="perfil-value">
                @if(ViewBag.Usuario.Descripción != null)
                {
                    @ViewBag.Usuario.Descripción
                }
            </div>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="perfil-botones">
        <a href='@Url.Action("Editar_Perfil","Home")' class="perfil-btn perfil-btn-editar">Editar</a>
        <a href='@Url.Action("Index","Home")' class="perfil-btn perfil-btn-logout">Log Out</a>
    </div>
</main>