<main class="pomodoro-page">
    
    <!-- CÃ­rculo del timer -->
    <div class="pomodoro-circle">
        <h3 id="estado">Tiempo de trabajo</h3>
        <h1 id="tiempo">30:00</h1>
    </div>

    <!-- Botones de control -->
    <div class="pomodoro-controles">
        <button class="pomodoro-btn pomodoro-btn-inicio" onclick="iniciar()">Inicio</button>
        <button class="pomodoro-btn pomodoro-btn-editar" onclick="abrirModal()">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
                <path d="m15 5 4 4"/>
            </svg>
        </button>
        <button class="pomodoro-btn pomodoro-btn-cancelar" onclick="reiniciar()">Cancelar</button>
    </div>

    <!-- Modal para editar tiempos (oculto por defecto) -->
    <div id="modalEditar" class="pomodoro-modal" style="display: none;">
        <section class="pomodoro-modal-content">
            <h2>Editar Tiempos</h2>
            
            <div class="pomodoro-input-group">
                <label>Tiempo de trabajo (minutos)</label>
                <input type="number" id="inputTrabajo" value="30" min="1" max="120">
            </div>

            <div class="pomodoro-input-group">
                <label>Tiempo de descanso (minutos)</label>
                <input type="number" id="inputDescanso" value="5" min="1" max="60">
            </div>

            <div class="pomodoro-modal-botones">
                <button class="pomodoro-btn-modal pomodoro-btn-guardar" onclick="guardarTiempos()">Guardar</button>
                <button class="pomodoro-btn-modal pomodoro-btn-cancelar-modal" onclick="cerrarModal()">Cancelar</button>
            </div>
        </section>
    </div>

</main>

<script src="~/js/pomodoro.js"></script>